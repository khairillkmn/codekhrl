#include <iostream>
using namespace std;
#define MAX 10

struct Antrian
{
    int data[MAX];
    int head;
    int tail;
};

void enqueue(int data);
int dequeue();
void tampil();

int main()
{
    int pilih,indata;
    //pilih program.
    pilihprogram:

    cout<<"\n";
    cout<<"1. Enqueue\n";
    cout<<"2. Dequeue\n";
    cout<<"3. Tampilkan Data\n";
    cout<<"\nMasukan Pilihan : ";
    cin>>pilih;

    switch(pilih)
    {
        case 1 : cout<<"\nMasukkan data : ";
                 cin>>indata;
                 enqueue(indata);
                 goto pilihprogram;
                 break;

        case 2 : cout<<"\n\nBerhasil dequeue\n\n";
                 dequeue();
                 goto pilihprogram;
                 break;

        case 3 : cout<<"\nTampilkan data : \n";
                 tampil();goto pilihprogram;
                 break;

        default :cout<<"\nPilihan invalid";
                 break;
    }
    return 0;
}

Antrian antre;

void create()
{
    antre.head = antre.tail = -1;
}

bool isEmpty()
{
    if(antre.tail == -1)
    {
        return true;
    }
    else
    {
        return false;
    }
}

bool isFull()
{
    if(antre.tail == MAX)
    { //Jika max - 1 maka hanya bisa input 7 bilangan.
            return true;
    }
    else
    {
        return false;
    }
}

//Cek apakah queue penuh, jika penuh tampilkan tulisan queue penuh. jika tidak, enqueue ke queue
void enqueue(int data)
{
    if(isFull())
    {
        cout<<"\nAntrian sudah penuh\n";
    }
    else
    {
        if(isEmpty())
        {
            //Jika kosong, head dan tail=0
            antre.head = antre.tail = 0;
            antre.data[antre.tail] = data;
            antre.head++;
            antre.tail++;
        }
        else
        {
            //Jika tidak kosong
            antre.data[antre.tail] = data;
            //Tambahkan tail karena head kan sudah 1
            antre.tail++;
            cout<<"\n"<<"["<<data<<"]"<<" Dimasukan kedalam antrian.\n\n";
        }
    }
}

//cek apakah queue kosong, jika iya tampilkan tulisan queue kosong. jika tidak, dequeue dari queue

int dequeue()
{
    if(isEmpty())
    {
        cout<<"\nAntrian kosong"<<endl;
    }
    else
    {
        int e = antre.data[antre.head];
        for(int i=0;i<antre.tail;i++)
        {
            antre.data[i] = antre.data[i+1];
        }
        antre.tail--;
        return e;
    }
}

void tampil()
{
    cout<<"\nData antrian : \n";
    if(isEmpty())
    {
        cout<<"\nAntrian kosong\n";
    }
    else
    {
        for(int i = 0;i<MAX;i++)
        {
            if(antre.data[i] == NULL)
            {
                cout<<i+1<<" Data Kosong\n";
            }
            else
            {
                cout<<i+1<<". "<<antre.data[i]<<endl;
            }
        }
    }
    cout<<endl<<endl;
}
